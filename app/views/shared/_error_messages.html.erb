<% if @user.errors.any? %>
	<div data-alert class="alert-box errors radius">
  	El formulario contiene <%= pluralize(@user.errors.count, "error") %>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
			<li>
				* <%= msg %>
			</li>
			<% end %>
		</ul>
  <a href="#" class="close">&times;</a>

		
	</div>
<% end %>